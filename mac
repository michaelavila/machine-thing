MAC_MODULES=$HOME/.mac/modules

# a very small number of utilities, kept
# out of 
SCRIPTPATH="$(cd "$(dirname "$0")"; pwd -P)"
source $SCRIPTPATH/lib/utils.sh

# ensure that a module is installed and
# configured to be used
#
module() {
  echo "module $1"
  [ -d "$MAC_MODULES" ]       || fail "no modules at $MAC_MODULES"
  [ -d "$MAC_MODULES/$1" ]    || fail "module $MAC_MODULES/$1 does not exist!"
  pushd $MAC_MODULES/$1
  [ -x install ] && ./install || echo "Nothing to install (or install file not executable)"
  popd
}

# to setup the machine, list the modules that apply
